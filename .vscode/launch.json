    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach camera",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "192.168.1.225",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}/src",
                "remoteRoot": "/root/groovy-robot/src"
            }]
        },
        {
            "name": "Attach audio",
            "type": "python",
            "request": "attach",
            "port": 1234,
            "host": "192.168.1.225",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}/src",
                "remoteRoot": "/root/groovy-robot/src"
            }]
        },
        {
            "name": "Attach robot",
            "type": "python",
            "request": "attach",
            "port": 7878,
            "host": "192.168.1.225",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}/src",
                "remoteRoot": "/root/groovy-robot/src"
            }]
        },
        {
            "name": "Attach robot: local",
            "type": "python",
            "request": "attach",
            "port": 7878,
            "host": "localhost",
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "FLASK_APP": "r_server.web_server",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=8080"
            ],
            "jinja": true
        },
    ]
}