    "version": "0.2.0",
    "configurations": [{
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "192.168.1.144",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}/src",
                "remoteRoot": "/root/groovy-robot/src"
            }]
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}