    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "python",
            "request": "launch",
            "module": "r_server.web_server",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "GEVENT_SUPPORT": "True"
            }
        },
        {
            "name": "Attach camera",
            "type": "python",
            "request": "attach",
            "port": 1212,
            "host": "192.168.1.165",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/home/pi/groovy-robot/src"
                }
            ]
        },
        {
            "name": "Attach audio",
            "type": "python",
            "request": "attach",
            "port": 1234,
            "host": "192.168.1.165",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/home/pi/groovy-robot/src"
                }
            ]
        },
        {
            "name": "Attach robot",
            "type": "python",
            "request": "attach",
            "port": 7878,
            "host": "192.168.1.165",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/home/pi/groovy-robot/src"
                }
            ]
        }
    ]
}